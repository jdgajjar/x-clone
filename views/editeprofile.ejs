<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Edit Profile - X</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black text-white min-h-screen font-sans">

  <header class="flex items-center p-4 border-b border-gray-700">
    <h1 class="text-2xl font-bold">Edit Profile</h1>
  </header>

  <main class="flex justify-center mt-8">
    <form class="bg-black w-full max-w-md p-6 space-y-6" action="/profile/edit" method="POST">

      <!-- Username -->
      <div class="space-y-2">
        <label for="username" class="text-gray-400 text-sm">Username</label>
        <input 
          type="text" 
          id="username" 
          name="username" 
          value="<%= user.username %>" 
          class="w-full bg-transparent border border-gray-700 rounded px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500" 
          placeholder="Username">
      </div>

      <!-- Email -->
      <div class="space-y-2">
        <label for="email" class="text-gray-400 text-sm">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          value="<%= user.email %>" 
          class="w-full bg-transparent border border-gray-700 rounded px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500" 
          placeholder="Email">
      </div>

      <!-- Buttons -->
      <div class="flex justify-between pt-4">
        <button type="button" id="cancel-edit" class="px-6 py-2 bg-transparent border border-gray-700 rounded-full text-white hover:bg-gray-800 transition">
          Cancel
        </button>
        <button type="submit" class="px-6 py-2 bg-white text-black font-bold rounded-full hover:bg-gray-200 transition">
          Save
        </button>
      </div>

    </form>
  </main>

  <script>
    document.getElementById('cancel-edit').addEventListener('click', () => {
      window.history.back(); // Navigate back to the previous page
    });
  </script>

</body>
</html>
